* {box-sizing: border-box;
}
*:before,
*:after {
    box-sizing: border-box;
}
* {
    margin: 0;
    padding: 0;
}
ul, ol {
    list-style: none;
}
a {
    color: inherit;
    text-decoration: none;
}
img {
    max-width: 100%;
    max-height: 100%;
}
/* style */
body {
    width: 100%;
    background: #d0b37e;
    display: flex;
    flex-direction: column;

}

.globalHeader {
    width: 100%;
    height: 160px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border: 1px solid red;
}
.webIcon {
    border: 1px solid red;
    width: 100%;
    height: 50px;
}
.engineBar {
    border: 1px solid red;
    width: 100%;
    height: 30px;
}
.searchForm {
    border: 2px solid #00B4CC;
    display: flex;
    justify-content: space-between;
    margin-left: 16px;
    margin-right: 16px;
    border-radius: 25px;
    padding: 5px 10px 5px 15px;
    background: #ffffff;
}
.searchForm .searchInput {
    width: 100%;
    height: 36px;
    font-size: 20px;
    border-style: none;
    outline: none;
    background: #ffffff;
}
.searchForm .searchButton {
    width: 36px;
    height: 36px;
    align-items: center;
    cursor: pointer;
    font-size: 36px;
    background: #ffffff;
    text-align: center;
    border-style: none;
    outline: none;
}

.globalMain {
    /*max-width: 900px;*/

    background: #a88787;
    width: 100%;
}
.siteList {
    margin: 50px auto 50px auto;
    width: 90%;
    height: 400px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: flex-start;
    background: #7173a7;
}
.siteList .liWrapper {
    width: 33%;
    border: 2px solid black;
}
.siteList .site {
    width: 100%;
    height: 100px;
    background: #b14a4a;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    cursor: pointer;
}
.siteList .site .logo {
    border: 1px solid yellow;
    width: 70%;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40px;
    text-transform: uppercase;
}
.siteList .site .link {
    display: flex;
    border: 1px solid red;
    font-size: 16px;
}
