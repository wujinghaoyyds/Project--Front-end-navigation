* {box-sizing: border-box;
}
*:before,
*:after {
    box-sizing: border-box;
}
* {
    margin: 0;
    padding: 0;
}
ul, ol {
    list-style: none;
}
a {
    color: inherit;
    text-decoration: none;
}
img {
    max-width: 100%;
    max-height: 100%;
}
/* style */
body {
    display: flex;
    flex-direction: column;
}

.globalHeader {
    width: 100%;
    height: 160px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border: 1px solid red;
}
.webIcon {
    border: 1px solid red;
    width: 100%;
    height: 50px;
}
.engineBar {
    border: 1px solid red;
    width: 100%;
    height: 30px;
}
.searchForm {
    border: 2px solid #00B4CC;
    display: flex;
    justify-content: space-between;
    margin-left: 16px;
    margin-right: 16px;
    border-radius: 25px;
    padding: 5px 10px 5px 15px;
    background: #ffffff;
}
.searchForm .searchInput {
    width: 100%;
    height: 36px;
    font-size: 20px;
    border-style: none;
    outline: none;
    background: #ffffff;
}
.searchForm .searchButton {
    width: 36px;
    height: 36px;
    align-items: center;
    cursor: pointer;
    font-size: 36px;
    background: #ffffff;
    text-align: center;
    border-style: none;
    outline: none;
}

.globalMain {
    /*max-width: 900px;*/

    width: 100%;
}
.siteList {
    margin: 50px auto 50px auto;
    width: 90vw;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    background: #7173a7;
}

.siteList .site {
    width: 30vw;
    height: 30vw;
    border: 1px solid black;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    cursor: pointer;
    position: relative;
}
.siteList .site .logo {
    border: 1px solid #6bd729;
    width: 50%;
    height: 50%;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
}
.siteList .site .link {
    font-size: 16px;
    border: 1px solid #1a3a8b;
}
.siteList .site .close {
    border: 2px solid red;
    position: absolute;
    right: 10px;
    top: 10px;
    display: none;
    cursor: default;
}
.siteList .site:hover .close {
    display: block;
}
.siteList .addButton {
    width: 30vw;
    height: 30vw;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    background: white;
}
.siteList .addButton .iconWrapper {

    width: 50%;
    height: 50%;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.siteList .addButton .text {

    font-size: 16px;
}
.siteList .addButton .iconWrapper .icon {

    width: 80%;
    height: 80%;
    outline: none;
    border-style: none;
}