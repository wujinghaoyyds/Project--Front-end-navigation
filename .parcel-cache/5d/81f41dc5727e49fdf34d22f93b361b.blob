* {box-sizing: border-box;
}
*:before,
*:after {
    box-sizing: border-box;
}
* {
    margin: 0;
    padding: 0;
}
ul, ol {
    list-style: none;
}
a {
    color: inherit;
    text-decoration: none;
}
img {
    max-width: 100%;
    max-height: 100%;
}
/* style */
body {
    background: #F2F2F2;
}

.globalHeader {
    border: 1px solid black;
    width:100%;
    height:160px;
    display: flex;
    flex-direction: column;
}
.webIcon{
    border:1px solid red;
    width:100%;
    height:30px;
}
.engineBar{
    border:1px solid red;
    width:100%;
    height:30px;
}
.searchForm {
    border:1px solid blue ;
    display: flex;
    width:100%;
    height:40px;

}

.searchForm .searchInput {
    width: 100%;
    height: 20px;
    border: 5px solid #00B4CC;
}

.searchForm .searchButton {

    border-radius: 4px;
    background: #0282b9;

}
